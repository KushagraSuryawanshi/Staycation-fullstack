<% layout('layouts/boilerplate.ejs') -%>
<body>
  <h1>All Listings</h1>
  <!-- <form method="GET" action="/listings/new">
      <button type="submit">Create New Listing</button>
    </form> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-xs-1 row-cols-1">
    <% for(listing of listings){ %>
      <a  class="listing-link" href="/listings/<%= listing._id %> ">
        <div class="card col">
          <img src="<%= listing.image %>" class="card-img-top" alt="listing_img" />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b> <br />
              &dollar; <%= listing.price.toLocaleString("en-AU") %>
            </p>
          </div>
        </div>
      </a>
    
    <% } %>
  </div>
</body>
