<% layout("layouts/boilerplate.ejs") -%>
<body>
  <div class="row mt-3">
    <div class="col-md-8 offset-md-2 col-10 offset-1">
      <h3>Create New Listing</h3>

      <form method="POST" action="/listings">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            name="listing[title]"
            placeholder="e.g., Cozy Apartment in Melbourne"
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            id=""
            placeholder="Write a brief description of the listing, including features and amenities."
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input
            type="text"
            class="form-control"
            name="listing[image]"
            placeholder="Paste the URL/Link of an image"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-sm-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              name="listing[price]"
              placeholder="e.g., 1000"
            />
          </div>
          <div class="mb-3 col-sm-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              class="form-control"
              name="listing[country]"
              placeholder="e.g., Australia"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            class="form-control"
            name="listing[location]"
            placeholder="e.g., St. Kilda, Melbourne"
          />
        </div>

        <button type="submit" class="btn btn-dark new-listing-btn">
          Submit
        </button>
      </form>
    </div>
  </div>
</body>
